{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "EduPlanner Demo Users Config",
    "type": "object",
    "required": [
        "users"
    ],
    "properties": {
        "users": {
            "description": "Moodle Users to create.",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "capabilities",
                            "token",
                            "class",
                            "task-status"
                        ],
                        "properties": {
                            "task-status": {
                                "type": "object",
                                "description": "Map<String, submitted|done>",
                                "properties": {
                                    "mathematics.integrals": {
                                        "type": "string",
                                        "enum": [
                                            "completed",
                                            "submitted"
                                        ]
                                    },
                                    "mathematics.derivatives": {
                                        "type": "string",
                                        "enum": [
                                            "completed",
                                            "submitted"
                                        ]
                                    },
                                    "mathematics.midtermexam": {
                                        "type": "string",
                                        "enum": [
                                            "completed",
                                            "submitted"
                                        ]
                                    },
                                    "physics.mechanics": {
                                        "type": "string",
                                        "enum": [
                                            "completed",
                                            "submitted"
                                        ]
                                    },
                                    "physics.finalexam": {
                                        "type": "string",
                                        "enum": [
                                            "completed",
                                            "submitted"
                                        ]
                                    }
                                },
                                "additionalProperties": false
                            },
                            "class": {
                                "type": "string",
                                "enum": [
                                    "1A",
                                    "1B",
                                    "2A",
                                    "2B",
                                    "3A",
                                    "3B",
                                    "4A",
                                    "4B",
                                    "5A",
                                    "5B"
                                ]
                            },
                            "name": {
                                "type": "string"
                            },
                            "submitted_tasks": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "capabilities": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "student",
                                        "teacher",
                                        "slotmaster"
                                    ]
                                }
                            },
                            "token": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "capabilities",
                            "token"
                        ],
                        "properties": {
                            "class": {
                                "type": "string",
                                "enum": [
                                    "1A",
                                    "1B",
                                    "2A",
                                    "2B",
                                    "3A",
                                    "3B",
                                    "4A",
                                    "4B",
                                    "5A",
                                    "5B"
                                ]
                            },
                            "name": {
                                "type": "string"
                            },
                            "capabilities": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "teacher",
                                        "slotmaster"
                                    ]
                                }
                            },
                            "token": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}