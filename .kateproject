{
	"name": "eduplanner_demo",
	"build": {
		"directory": ".",
		"clean": "python3 -m hatch clean",
		"default_target": "all",
		"targets": [
			{"name": "all", "build_cmd": "python3 -m hatch build"},
			{"name": "schema", "build_cmd": "python3 -m hatch run python3 -m eduplanner_demo schemagen -o ./src/schema/"}
		]
	},
	"lspclient": {
		"servers": {
			"python" : {
				"root": ".",
				"settings": {
					"pylsp": {
						"plugins": {
							"rope_completion": {
								"enabled": true
							},
							"mccabe": {
								"enabled": false
							}
						}
					}
				}
			},
			"yaml": {
				"root": ".",
				"settings": {
					"yaml": {
						"schemas": {
							"src/schema/users.yml.schema.json": "config/users.yml",
							"src/schema/courses.yml.schema.json": "config/courses.yml"
						}
					}
				}
			}
		}
	}
}