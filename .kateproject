{
	"name": "eduplanner_demo",
	"build": {
		"directory": ".",
		"clean": "python3 -m hatch clean",
		"default_target": "all",
		"targets": [
			{"name": "all", "build_cmd": "python3 -m hatch build"},
			{"name": "schema", "build_cmd": "python3 -m hatch run python3 src/eduplanner_demo/autocomplete.py"}
		]
	},
	"lspclient": {
		"servers": {
			"python" : {
				"settings": {
					"pylsp": {
						"plugins": {
							"mccabe": {
								"enabled": false
							}
						}
					}
				}
			}
		}
	}
}